# -*- mode: yaml -*-

manifest:
  version: 1.0
  
automations:
  label_sonarqube:
    if:
      - {{ reports.count > 0}}
    run:
      - action: add-label@v1
        args:
          label: '🛡️ x {{ reports.count }} {{ reports.name }}'

sonar: {{ pr | extractSonarFindings }}

reports:
  - name: Vulnerabilities
  - count: sonar.vulnerabilities.count
