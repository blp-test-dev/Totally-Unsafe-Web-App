# -*- mode: yaml -*-

manifest:
  version: 1.0
  
automations:
  {% for item in reports %}
  label_sonarqube{{ item.name }}:
    if:
      - {{ item.count > 0}}
    run:
      - action: add-label@v1
        args:
          label: '🛡️ x {{ item.count }} {{ item.name }}'
  {% endfor %}:

sonar: {{ pr | extractSonarFindings }}

reports:
  - name: vulnerabilities
    count: sonar.vulnerabilities.count

